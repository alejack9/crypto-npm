{
  "name": "crypto-npm",
  "version": "1.0.0",
  "description": "A small package to encrypt and decrypt messages using a pseudorandom function",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint -c .eslintrc.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alejack9/crypto-npm.git"
  },
  "keywords": [
    "crypto",
    "encrypt",
    "decrypt",
    "pseudorandom",
    "pseudo-random"
  ],
  "author": "Alessandro Giacch√®",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/alejack9/crypto-npm/issues"
  },
  "homepage": "https://github.com/alejack9/crypto-npm#readme",
  "dependencies": {
    "seed-random": "^2.2.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.12",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/seed-random": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  }
}
